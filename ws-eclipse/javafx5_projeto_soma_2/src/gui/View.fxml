<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="45.0" layoutY="35.0" text="Calculate Sum">
         <font>
            <Font name="BankGothic Md BT Medium" size="19.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="45.0" layoutY="94.0" promptText="First number" />
      <TextField fx:id="txtNumber2" layoutX="45.0" layoutY="138.0" promptText="Second number" />
      <Button fx:id="btSum" layoutX="45.0" layoutY="190.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="45.0" layoutY="248.0" text="Result = ">
         <font>
            <Font name="BankGothic Md BT Medium" size="19.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="160.0" layoutY="251.0" prefHeight="17.0" prefWidth="40.0" />
   </children>
</AnchorPane>
